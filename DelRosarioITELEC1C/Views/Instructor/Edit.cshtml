@model Instructor;

<h1> Edit Instructor</h1>
<form asp-action="edit" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select asp-for="IsTenured" class="form-control">
            <option value="false">Probationary</option>
            <option value="true">Permanent</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Date Hired: </label>
        <input asp-for="HiringDate" class="form-control" />
    </div></br>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="button" onclick="history.back()" class="btn btn-primary">Cancel</button>
</form>
