
@model IEnumerable<Student>;

<div><h1>Student List</h1></div>
<table  class="table table-dark">
            
        <tr>
            <th colspan="8">Student</th>
        </tr>

        <tr>
            <td>Name</td>
            <td>Course</td>
            <td>Admission Date</td>
            <td>Email</td>
            <td>GPA</td>
            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>
           
            
        </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
             <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a></td>


        </tr>
    }
</table>

<a asp-action="Student" asp-controller="Student">SHOW</a>
<a asp-action="AddStudent" asp-controller="Student">Add Student</a>
